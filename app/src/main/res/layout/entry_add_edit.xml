<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category_label"
        android:id="@+id/categoryLabel"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categorySelect"
        android:layout_below="@+id/categoryLabel"
        android:layout_alignLeft="@+id/amountInput"
        android:layout_alignStart="@+id/amountInput"
        android:layout_alignRight="@+id/amountInput"
        android:layout_alignEnd="@+id/amountInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/amount_label"
        android:id="@+id/amountLabel"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/categorySelect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/amountInput"
        android:layout_below="@+id/amountLabel"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submitButton"
        android:id="@+id/submitButton"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/amountInput"
        android:layout_centerHorizontal="true" />

</RelativeLayout>